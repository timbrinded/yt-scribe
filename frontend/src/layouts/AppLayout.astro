---
import '../styles/global.css';
import { UserAvatar } from '../components/UserAvatar';

interface Props {
	title?: string;
	description?: string;
}

const {
	title = 'Library - YTScribe',
	description = 'Your video knowledge base'
} = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
	</head>
	<body class="min-h-screen bg-neutral-50 text-neutral-900 antialiased">
		<!-- Subtle gradient background -->
		<div class="fixed inset-0 -z-10 bg-gradient-to-br from-neutral-50 via-primary-50/20 to-neutral-50"></div>

		<!-- App header with navigation -->
		<header class="sticky top-0 z-50 border-b border-neutral-200/50 bg-white/80 backdrop-blur-md">
			<div class="mx-auto flex max-w-7xl items-center justify-between px-4 py-3">
				<a href="/library" class="flex items-center gap-2 text-xl font-bold text-neutral-900">
					<svg class="h-7 w-7 text-primary-600" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z" stroke="currentColor" stroke-width="2"/>
						<path d="M10 9L15 12L10 15V9Z" fill="currentColor"/>
					</svg>
					YTScribe
				</a>
				<UserAvatar client:load />
			</div>
		</header>

		<slot />
	</body>
</html>

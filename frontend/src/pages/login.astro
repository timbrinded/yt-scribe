---
import LandingLayout from '../layouts/LandingLayout.astro';

const API_BASE_URL = import.meta.env.PUBLIC_API_URL || "http://localhost:3000";
---

<LandingLayout title="Sign In - YTScribe">
	<div class="flex min-h-screen items-center justify-center px-4">
		<div class="w-full max-w-md">
			<!-- Logo and title -->
			<div class="mb-8 text-center">
				<a href="/" class="inline-flex items-center gap-2 text-2xl font-bold text-neutral-900">
					<svg class="h-8 w-8 text-primary-600" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z" stroke="currentColor" stroke-width="2"/>
						<path d="M10 9L15 12L10 15V9Z" fill="currentColor"/>
					</svg>
					YTScribe
				</a>
				<h1 class="mt-6 text-3xl font-bold text-neutral-900">Welcome back</h1>
				<p class="mt-2 text-neutral-500">Sign in to access your video knowledge base</p>
			</div>

			<!-- Sign in card -->
			<div class="rounded-2xl bg-white/80 p-8 shadow-lg backdrop-blur-sm ring-1 ring-neutral-900/5">
				<a
					href={`${API_BASE_URL}/auth/google`}
					class="flex w-full items-center justify-center gap-3 rounded-lg bg-white px-4 py-3 font-medium text-neutral-700 shadow-sm ring-1 ring-neutral-200 transition-all hover:bg-neutral-50 hover:shadow-md"
				>
					<!-- Google icon -->
					<svg class="h-5 w-5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
						<path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
						<path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
						<path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
						<path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
					</svg>
					Continue with Google
				</a>

				<div class="relative my-6">
					<div class="absolute inset-0 flex items-center">
						<div class="w-full border-t border-neutral-200"></div>
					</div>
					<div class="relative flex justify-center text-sm">
						<span class="bg-white px-2 text-neutral-400">Secure authentication</span>
					</div>
				</div>

				<p class="text-center text-sm text-neutral-500">
					By signing in, you agree to our
					<a href="#" class="text-primary-600 hover:text-primary-700">Terms of Service</a>
					{" "}and{" "}
					<a href="#" class="text-primary-600 hover:text-primary-700">Privacy Policy</a>
				</p>
			</div>

			<!-- Back to home link -->
			<p class="mt-8 text-center text-sm text-neutral-500">
				New to YTScribe?{" "}
				<a href="/" class="font-medium text-primary-600 hover:text-primary-700">
					Learn more about what we do
				</a>
			</p>
		</div>
	</div>
</LandingLayout>

{
	"name": "ytscribe",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"start": "bun run src/server.ts",
		"dev": "bun --hot run src/server.ts",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "biome check .",

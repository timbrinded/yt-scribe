		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@libsql/client": "^0.17.0",
		"@types/bun": "latest",
		"drizzle-kit": "^0.31.8",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"dependencies": {
		"@elysiajs/cors": "^1.4.1",
		"arctic": "^3.7.0",
		"drizzle-orm": "^0.45.1",
		"elysia": "^1.4.22"
	}
}
